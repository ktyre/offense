{
  "manifest_version": 2,

  "name": "OffenseMeter",
  "description": "This extension helps you avoid being offensive!",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "content_scripts": [
    {
      "js": ["jquery.min.js", "popup.js"],
      "matches":["http://*.*", "https://*/*"]
    } 
  ]
}
